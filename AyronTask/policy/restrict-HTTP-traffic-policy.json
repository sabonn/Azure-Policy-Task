{
  "properties": {
    "displayName": "Restrict HTTP Traffic (Ports 80 and 443)",
    "policyType": "Custom",
    "mode": "All",
    "description": "Disallow the creation of security rules permitting inbound traffic on ports specified by parameters.",
    "parameters": {
      "restrictedPorts": {
        "type": "Array",
        "metadata": {
          "description": "The list of ports that should be restricted",
          "displayName": "Restricted Ports"
        },
        "defaultValue": ["80", "443"]
      },
      "allowedAction": {
        "type": "String",
        "metadata": {
          "description": "The action to be performed when the policy condition matches (e.g., deny or audit).",
          "displayName": "Allowed Action"
        },
        "defaultValue": "deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/networkSecurityGroups/securityRules"
          },
          {
            "field": "Microsoft.Network/networkSecurityGroups/securityRules/direction",
            "equals": "Inbound"
          },
          {
            "field": "Microsoft.Network/networkSecurityGroups/securityRules/destinationPortRange",
            "in": "[parameters('restrictedPorts')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('allowedAction')]"
      }
    },
    "nonComplianceMessage": "Inbound traffic on ports 80 (HTTP) or 443 (HTTPS) is not allowed. Please ensure that security rules do not permit traffic on these ports."
  }
}
